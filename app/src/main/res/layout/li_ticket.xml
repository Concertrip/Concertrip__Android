<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/iv_time_prev"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                    android:id="@+id/iv_time_cur"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/iv_time_next"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:weightSum="10"
            android:paddingHorizontal="28dp"
            android:paddingVertical="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_weight="7"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/item_ticket_title"
                    android:text="더 몬스터 페스티벌"
                    tools:text="더 몬스터 페스티벌"
                    android:textColor="@color/textTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:paddingTop="18dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/txt_li_ticket_place"
                        android:textColor="@color/textTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/item_ticket_place"
                        android:text="성남아트센터"
                        tools:text="성남아트센터"
                        android:textColor="@color/textTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:paddingTop="0.3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/txt_li_ticket_date"
                        android:textColor="@color/textTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/item_ticket_date"
                        android:text="2018.12.23(월)"
                        tools:text="2018.12.23(월)"
                        android:textColor="@color/textTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
                android:layout_weight="3"
                android:src="@drawable/ic_account_circle"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>