<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:gravity="center_vertical"
                xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingRight="20dp"
                  android:gravity="center_horizontal">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/iv_time_prev"
                   android:src="@drawable/line"/>

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/iv_time_cur"
                   android:src="@drawable/circle"/>

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/iv_time_next"
                   android:src="@drawable/line"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingHorizontal="32dp"
            android:paddingVertical="28dp"
            android:layout_width="302dp"
            android:gravity="center_vertical"
            android:background="@drawable/ic_ticket"
            android:layout_height="140dp">
        <LinearLayout
                android:layout_weight="6.5"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/item_ticket_title"
                    android:text="더 몬스터 페스티벌"
                    tools:text="더 몬스터 페스티벌"
                    android:textSize="13sp"
                    android:textColor="@color/textTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:paddingTop="18dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/txt_li_ticket_place"
                        android:textSize="11sp"
                        android:textColor="@color/textTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/item_ticket_place"
                        android:text="성남아트센터"
                        tools:text="성남아트센터"
                        android:textSize="11sp"
                        android:textColor="@color/textTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:paddingTop="0.3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/txt_li_ticket_date"
                        android:textSize="11sp"
                        android:textColor="@color/textTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/item_ticket_date"
                        android:text="2018.12.23(월)"
                        tools:text="2018.12.23(월)"
                        android:textSize="11sp"
                        android:textColor="@color/textTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
                android:layout_weight="3"
                android:src="@drawable/ic_account_circle"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>