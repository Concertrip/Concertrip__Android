<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <include
                android:id="@+id/content_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/content_header"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:showIn="@layout/activity_concert"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="9sp"
                    android:text="@string/txt_content_concert_cast"
                    android:textStyle="bold"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="0.7dp"
                  android:background="#999999"
            />

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>


            <TextView
                    android:id="@+id/btn_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="2sp"
                    android:text="전체보기"
                    android:layout_marginTop="4.4dp"
                    android:layout_gravity="right"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="9sp"
                    android:text="@string/txt_content_concert_schedule"
                    android:textStyle="bold"
                    android:layout_marginTop="2.7dp"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="0.7dp"
                  android:background="#999999"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:lineSpacingExtra="11sp"
                    android:text="@string/txt_content_concert_time"
                    android:layout_marginTop="13.8dp"/>
            <TextView
                    android:id="@+id/tv_concert_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:lineSpacingExtra="11sp"
                    android:text="2018년 12월 23일 (일) 19:00"
                    tools:text="2018년 12월 23일 (일) 19:00"
                    android:layout_marginTop="13.8dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:lineSpacingExtra="11sp"
                    android:text="@string/txt_content_concert_price"
                    android:layout_marginTop="17.4dp"/>
            <TextView
                    android:id="@+id/tv_concert_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:lineSpacingExtra="11sp"
                    android:text="스탠딩 88,000원"
                    tools:text="스탠딩 88,000원"
                    android:layout_marginTop="13.8dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:lineSpacingExtra="11sp"
                    android:text="@string/txt_content_concert_lineup"
                    android:layout_marginTop="17.4dp"/>
            <TextView
                    android:id="@+id/tv_concert_cast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:lineSpacingExtra="11sp"
                    android:text="지코, 페노메코, 크러쉬, 해쉬스완 등"
                    tools:text="지코, 페노메코, 크러쉬, 해쉬스완 등"
                    android:layout_marginTop="13.8dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:lineSpacingExtra="11sp"
                    android:text="@string/txt_content_concert_buy"
                    android:layout_marginTop="17.4dp"/>
            <TextView
                    android:id="@+id/tv_concert_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:lineSpacingExtra="11sp"
                    android:text="concertrip.buy.com"
                    tools:text="concertrip.buy.com"
                    android:layout_marginTop="13.8dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="9sp"
                    android:text="@string/txt_content_concert_place"
                    android:textStyle="bold"
                    android:layout_marginTop="17.8dp"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="0.7dp"
                  android:background="#999999"/>

            <TextView
                    android:id="@+id/tv_concert_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:lineSpacingExtra="11sp"
                    android:text="세종대학교 광개토대왕"
                    tools:text="세종대학교 광개토대왕"
                    android:layout_marginTop="13.8dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="9sp"
                    android:text="@string/txt_content_concert_caution"
                    android:textStyle="bold"
                    android:layout_marginTop="17.8dp"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="0.7dp"
                  android:background="#999999"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_caution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <ImageView android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/iv_concert_info"
                       android:layout_marginVertical="38dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>