<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="#f2f2f2"
                android:layout_width="match_parent"
                android:layout_height="72dp">
    <LinearLayout 
            android:orientation="horizontal"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/item_alarm_img"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/ic_account_circle"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/item_alarm_title"
                    android:text="더 몬스터 콘서트"
                    tools:text="더 몬스터 콘서트"
                    android:textSize="15sp"
                    android:textColor="@color/textTagDefault"
                    android:lineSpacingExtra="7sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/item_alarm_date"
                    android:text="#12월 25일"
                    tools:text="#12월 25일"
                    android:textColor="@color/textHashTag"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2sp"
                    android:paddingTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>