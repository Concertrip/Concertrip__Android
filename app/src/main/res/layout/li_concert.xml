<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:paddingVertical="13.6dp"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/iv_concert"
                android:layout_width="46dp"
                android:layout_height="46dp"
                />
        <RelativeLayout
                android:paddingHorizontal="13.3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tv_concert"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:text="더 몬스터 페스티벌"
                        tools:text="더 몬스터 페스티벌"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"/>
                <TextView
                        android:id="@+id/tv_concert_tag"
                        android:textSize="12sp"
                        android:textColor="@color/textHashTag"
                        android:text="#12월 23일 #대전"
                        tools:text="#12월 23일 #대전"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"/>
            </LinearLayout>
            <ImageButton
                    android:id="@+id/btn_like"
                    android:src="@drawable/ic_like"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>