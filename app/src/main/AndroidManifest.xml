<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="concertrip.sopt.com.concertrip">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".network.ApplicationController"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activities.main.MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar"
                android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activities.info.ConcertActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".activities.info.ArtistActivity"
                android:label="@string/title_activity_artist"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".deprecated.TempConcertActivity"
                android:label="@string/title_activity_artist"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".activities.SplashActivity"
                android:label="@string/title_activity_splash"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".activities.AlramActivity"
                android:label="@string/title_activity_splash"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>